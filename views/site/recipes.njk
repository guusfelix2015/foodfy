{% extends "layout.njk" %}

{% block content %}
  <main>
    <section class="cards">
      {% for recipe in recipes %}
        <div class="card" id="{{recipe.id}}" title="{{recipe.title}}" author="{{recipe.author}}">
          <div class="card_img">
            <img src="{{recipe.recipe_img}}" alt=""/>
          </div>
          <div class="card_text">
            <h3>{{recipe.title}}</h3> 
          </div>
          <div class="card_author">
            <p>{{recipe.author}}</p>
          </div>
        </div>
        {%endfor%}
      </section>
    </main>
    <script src="/script.js"></script>
  {% endblock %}