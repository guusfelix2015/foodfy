{% extends "layout.njk" %}


{% block content %}
  <section class="cards">
    <div class="card" id="burger">
      <div class="card_img">
        <img src="../assets/burger.png" alt=""/>
      </div>
      <div class="card_text">
        <h3>Triplo bacon burger</h3>
      </div>
      <div class="card_author">
        <p>por jorge Relato</p>
      </div>
    </div>

    <div class="card" id="pizza">
      <div class="card_img">
        <img src="../assets/pizza.png" alt=""/>
      </div>
      <div class="card_text">
        <h3>Pizza 4 estações</h3>
      </div>
      <div class="card_author">
        <p>por Fabiana Melo</p>
      </div>
    </div>

    <div class="card" id="espaguete">
      <div class="card_img">
        <img src="../assets/espaguete.png" alt=""/>
      </div>
      <div class="card_text">
        <h3>Espaguete ao alho</h3>
      </div>
      <div class="card_author">
        <p>por Júlia Kinoto</p>
      </div>
    </div>

    <div class="card" id="lasanha">
      <div class="card_img">
        <img src="../assets/lasanha.png" alt=""/>
      </div>
      <div class="card_text">
        <h3>Lasanha mac n’ cheese</h3>
      </div>
      <div class="card_author">
        <p>por Juliano Vieira</p>
      </div>
    </div>

    <div class="card" id="doce">
      <div class="card_img">
        <img src="../assets/doce.png" alt=""/>
      </div>
      <div class="card_text">
        <h3>Docinhos pão-do-céu</h3>
      </div>
      <div class="card_author">
        <p>por Ricardo Golvea</p>
      </div>
    </div>

    <div class="card" id="asinhas">
      <div class="card_img">
        <img src="../assets/asinhas.png" alt=""/>
      </div>
      <div class="card_text">
        <h3>Asinhas de frango ao barbecue</h3>
      </div>
      <div class="card_author">
        <p>por Vania Steroski</p>
      </div>
    </div>
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <p>Close Modal</p>
      </a>
      <div class="modal-content">
        <div id="img-content">
          <img id="img__content" src="" alt="">
          <h2>Asinhas de Frango ao barbecue</h2>
          <p>por Vania Steroski</p>
        </div>
      </div>
    </div>
  </div>
  <script src="/script.js"></script>
  {% endblock %}
</body>
</html>