{% extends "layout.njk" %}

{% block content %}
  <main>
    <section class="cards">
      {% for item in items %}
        <div class="card" id="{{item.id}}" title="{{item.title}}" author="{{item.author}}">
          <div class="card_img">
            <img src="{{item.image}}" alt=""/>
          </div>
          <div class="card_text">
            <h3>{{item.title}}</h3>
          </div>
          <div class="card_author">
            <p>{{item.author}}</p>
          </div>
        </div>
        {%endfor%}
      </section>
    </main>
    <script src="/script.js"></script>
  {% endblock %}