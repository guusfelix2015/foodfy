{% extends "layout.njk" %}

{% block content %}
  <main>
    <section class="cards">
      {% for item in items %}
        <div class="card" id="{{item.id}}" title="{{item.title}}" author="{{item.author}}">
          <div class="card_img">
            <img src="{{item.image}}" alt=""/>
          </div>
          <div class="card_text">
            <h3>{{item.title}}</h3>
          </div>
          <div class="card_author">
            <p>{{item.author}}</p>
          </div>
        </div>
        {%endfor%}
      </section>
    </main>

    <div class="modal-overlay">
      <div class="modal">
        <a class="close-modal">
          <p>Close Modal</p>
        </a>
        <div class="modal-content">
          <div id="img-content">
            <img id="img__content" src="" alt="">
            <h2></h2>
            <h4></h4>
          </div>
        </div>
      </div>
    </div>
    <script src="/script.js"></script>
  {% endblock %}
</body>
</html>