{% extends "layout.njk" %}

{% block content %}
  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card_img">
          <img src="{{item.image}}" alt=""/>
        </div>
        <div class="card_text">
          <h3>{{item.title}}</h3>
        </div>
        <div class="card_author">
          <p>{{item.author}}</p>
        </div>
      </div>
      {%endfor%}
    </section>

    <div class="modal-overlay">
      <div class="modal">
        <a class="close-modal">
          <p>Close Modal</p>
        </a>
        <div class="modal-content">
          <div id="img-content">
            <img id="img__content" src="" alt="">
            <h2>Asinhas de Frango ao barbecue</h2>
            <p>por Vania Steroski</p>
          </div>
        </div>
      </div>
    </div>
    <script src="/script.js"></script>
  {% endblock %}
</body>
</html>